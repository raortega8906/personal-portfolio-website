---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="max-w-sm p-6 bg-white bg-opacity-10 backdrop-blur-md border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:bg-opacity-10 dark:border-gray-700 w-[33%] ">
    <h3 class="mb-2 text-2xl font-bold">{title}</h3>
    <p class="mb-3 font-normal">{body}</p>
    <a
        href={href} 
        target="_blank" 
        rel="noopener noreferrer"
        class="bg-gray-100 text-gray-800 text-xs font-medium me-2 px-3.5 py-2.5 rounded dark:bg-gray-700 dark:text-gray-300 flex items-center justify-center"
    >
        View Project
        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
    </a>
</div>