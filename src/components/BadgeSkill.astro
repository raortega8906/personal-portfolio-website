---
const colors = {
    WordPress: "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
    Laravel: "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
    Astro: "bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-300",
    Tailwind: "bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300 ",
    PHP: "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
    JavaScript: "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
    CSS: "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
    HTML: "bg-pink-100 text-pink-800 dark:bg-pink-900 dark:text-pink-300",
    Boostrap: "bg-cyan-100 text-cyan-800 dark:bg-cyan-900 dark:text-cyan-300",
    Leadership: "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
};

interface Props {
    skill: keyof typeof colors;
}

const { skill }: Props = Astro.props;
---

<span class={`${colors[skill]} text-xs font-medium me-2 px-2.5 py-0.5 rounded-full`}>
    {skill}
</span>
