---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
---

<Layout title="My Portfolio Dev">
	<main>

		<!-- Sections Web Developer -->
		<section class="w-full lg:w-[740px] mx-auto py-44">
			<h1 class="text-4xl font-bold text-center">Web Developer</h1>
			<h2 class="text-xl text-center opacity-80 py-3">
				I'm a web developer with a passion for creating innovative and user-friendly websites. 
				I have a strong background in HTML, CSS, and JavaScript, and I am proficient in using 
				frameworks such as React, Angular, and Vue.js. I am also familiar with various front-end 
				libraries and tools, including Bootstrap, Materialize, and Tailwind CSS.
			</h2>
			
			<div class="flex flex-wrap justify-center items-center gap-x-2 gap-y-2 py-3">
				<Button>View Projects</Button>
				<Button>Download CV</Button>
			</div>
		</section>	

		<!-- Sections About -->
		<section class="w-full lg:w-[740px] mx-auto py-22" id="about">
			<h2 class="text-4xl font-bold text-center">About Me</h2>
		</section>	

		<!-- Sections Experience -->
		<section class="w-full lg:w-[740px] mx-auto py-22" id="experience">
			<h2 class="text-4xl font-bold text-center">Work Experience</h2>
		</section>	

		<!-- Sections Skills -->
		<section class="w-full lg:w-[740px] mx-auto py-22" id="skills">
			<h2 class="text-4xl font-bold text-center">Technical Skills</h2>
		</section>

		<!-- Sections Projects -->
		<section class="w-full lg:w-[740px] mx-auto py-22" id="projects">
			<h2 class="text-4xl font-bold text-center">Featured Projects</h2>
		</section>	

		<!-- Sections Contact -->
		<section class="w-full lg:w-[740px] mx-auto py-22" id="contact">
			<h2 class="text-4xl font-bold text-center">Let's Connect</h2>
		</section>	
	</main>
</Layout>
